{
    "manifest_version": 3,
    "name": "ArXiv to Local",
    "version": "1.0",
    "description": "Download and clean ArXiv tex sources for LLM grounding.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "host_permissions": [
        "http://localhost:8000/*",
        "*://arxiv.org/*"
    ]
}